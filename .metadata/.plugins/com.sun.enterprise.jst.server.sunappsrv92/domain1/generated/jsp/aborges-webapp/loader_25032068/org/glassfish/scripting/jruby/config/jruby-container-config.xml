<!--
JRuby container configuration. The settings applies to all the ruby applications deployed unless overriden thru
the deploy time properties.

jruby-home
    Location to the directory where JRuby is installed. It may be overriden by deployment time property
    jruby.home

jruby-runtime-pool
    JRuby runtime pool configuration. This can be overridden using deployment time properties
    jruby.runtime or jruby.runtime.min or jruby.runtime.max.
    
        <xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
        <xs:element name="jruby-runtime-pool">
            <xs:complexType>
                <xs:attribute name="initial-pool-size" type="xs:int" default="1"/>
                <xs:attribute name="min-pool-size" type="xs:int" default="1"/>
                <xs:attribute name="max-pool-size" type="xs:int" default="1"/>
            </xs:complexType>
        </xs:element>
        </xs:schema>
-->
<jruby-container jruby-home="${com.sun.aas.installRoot}/jruby">
    <jruby-runtime-pool initial-pool-size='1' min-pool-size='1' max-pool-size='1'/>
</jruby-container>